.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 40rpx 30rpx;
}

.header {
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #999;
}

.input-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.code-inputs {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.code-input {
  width: 80rpx;
  height: 100rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.hidden-input {
  position: absolute;
  opacity: 0;
  pointer-events: none;
}

.join-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
}

.join-btn[disabled] {
  background: #ccc;
}

.tips {
  margin-top: 60rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
}

.tip-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}
