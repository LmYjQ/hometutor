.container {
  padding: 30rpx;
  padding-bottom: 250rpx;
}

/* Tab 样式 */
.tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: 10rpx;
  padding: 6rpx;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.tab.active {
  background: #07c160;
  color: #fff;
  font-weight: bold;
}

.tab-content {
  min-height: 300rpx;
}

/* Section */
.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 视频预览 */
.video-preview {
  background: #000;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-video {
  width: 100%;
  max-height: 500rpx;
}

.video-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  color: #fff;
  font-size: 26rpx;
}

.clear-btn {
  color: #ff6b6b;
}

/* 主按钮 */
.main-btn {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
}

/* 音频结果 */
.audio-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: #e8f5e9;
  border-radius: 16rpx;
}

.success-icon {
  width: 80rpx;
  height: 80rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.success-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 30rpx;
}

.play-btn {
  width: 100%;
  margin-bottom: 20rpx;
}

.retry-btn {
  width: 100%;
}

/* 结果框 */
.result-box {
  background: #f8f8f8;
  padding: 24rpx;
  border-radius: 12rpx;
}

.result-title {
  font-weight: bold;
  margin-bottom: 16rpx;
}

.result-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.result-row .label {
  width: 180rpx;
  font-size: 26rpx;
  color: #666;
}

.result-row .value.success {
  color: #07c160;
  font-weight: bold;
}

.result-row .value.error {
  color: #fa5151;
}

.result-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.suggestion {
  margin-top: 20rpx;
  padding: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

/* 日志面板 */
.logs-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #1a1a1a;
  max-height: 280rpx;
  z-index: 100;
}

.logs-header {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 30rpx;
  background: #2a2a2a;
  font-size: 24rpx;
  color: #999;
}

.clear-log {
  color: #666;
}

.logs-list {
  height: 180rpx;
  padding: 0 20rpx;
}

.log-item {
  font-size: 22rpx;
  font-family: monospace;
  line-height: 1.8;
  color: #0f0;
}
