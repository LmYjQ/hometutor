.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #e0e0e0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.score-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-ring {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.score-value {
  font-size: 120rpx;
  font-weight: bold;
  line-height: 1;
}

.score-unit {
  font-size: 36rpx;
  color: rgba(255,255,255,0.8);
  margin-left: 8rpx;
}

.score-label {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

.assignment-info {
  margin: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.class-tag {
  display: inline-block;
  background: #667eea;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-bottom: 12rpx;
}

.question {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
}

.evaluation-section {
  margin: 0 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.missing-points {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.point-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.point-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.point-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.point-list {
  padding-left: 20rpx;
}

.point-item {
  display: flex;
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.point-num {
  color: #ff4d4f;
  margin-right: 8rpx;
}

.point-text {
  font-size: 26rpx;
  color: #666;
}

.comment {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.comment-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.comment-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
}

.comment-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.text-comparison {
  margin: 20rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.text-section {
  margin-bottom: 20rpx;
}

.text-section:last-child {
  margin-bottom: 0;
}

.text-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.text-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
}

.actions {
  margin: 40rpx 30rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  border-radius: 48rpx;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.retry-btn {
  background: #667eea;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}
