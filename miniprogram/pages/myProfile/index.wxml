<view class="container">
  <!-- 用户信息 -->
  <view class="profile-header">
    <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
    <view class="info">
      <text class="name">{{userInfo.name}}</text>
      <text class="role">{{roleText}}</text>
    </view>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="switchRole" wx:if="{{userInfo.role}}">
      <text class="menu-icon">🔄</text>
      <text class="menu-text">切换身份 ({{userInfo.role === 'teacher' ? '老师' : '学生'}})</text>
      <text class="menu-arrow">></text>
    </view>

    <view class="menu-item" bindtap="goToTest">
      <text class="menu-icon">🎬</text>
      <text class="menu-text">功能测试</text>
      <text class="menu-arrow">></text>
    </view>

    <button class="menu-item logout" open-type="share">
      <text class="menu-icon">📤</text>
      <text class="menu-text">分享给朋友</text>
      <text class="menu-arrow">></text>
    </button>
  </view>

  <!-- 关于 -->
  <view class="about-section">
    <view class="about-item">
      <text class="about-text">智能背诵助手 v1.0</text>
    </view>
    <view class="about-item">
      <text class="about-text">AI 自动检查背诵作业</text>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="logout-section">
    <button class="logout-btn" bindtap="logout">退出登录</button>
  </view>
</view>
