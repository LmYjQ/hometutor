.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.assignment-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  color: #fff;
}

.class-tag {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-bottom: 16rpx;
}

.question {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.meta {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

.submissions-section {
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.submission-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.submission-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.submission-card:last-child {
  border-bottom: none;
}

.student-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.info .name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info .time {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.info .submit-count {
  font-size: 22rpx;
  color: #13c2c2;
  margin-top: 4rpx;
}

.best-score {
  font-size: 28rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

.best-score.good {
  background: #f6ffed;
  color: #52c41a;
}

.best-score.medium {
  background: #fffbe6;
  color: #faad14;
}

.best-score.bad {
  background: #fff2f0;
  color: #ff4d4f;
}

.score-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.score {
  font-size: 32rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.score.good {
  background: #f6ffed;
  color: #52c41a;
}

.score.medium {
  background: #fffbe6;
  color: #faad14;
}

.score.bad {
  background: #fff2f0;
  color: #ff4d4f;
}

.status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.status.graded {
  background: #e6fffb;
  color: #13c2c2;
}

.status.pending {
  background: #fff7e6;
  color: #fa8c16;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
