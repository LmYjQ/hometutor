.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
  box-sizing: border-box;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.role-btn {
  width: 100%;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  font-size: 36rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.role-btn.teacher {
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
}

.role-btn.student {
  background: rgba(255, 255, 255, 0.85);
  color: #764ba2;
}

.role-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.role-icon {
  font-size: 48rpx;
}

.role-text {
  font-weight: 600;
}

.info-section {
  margin-top: 80rpx;
}

.info-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 用户信息填写页面 */
.user-info-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  padding: 10rpx;
  border: none;
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.avatar-tip {
  font-size: 24rpx;
  color: #667eea;
  margin-top: 10rpx;
}

.nickname-section,
.role-select-section,
.teacher-code-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.nickname-input,
.code-input {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.role-options {
  display: flex;
  gap: 30rpx;
}

.role-option {
  flex: 1;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #667eea;
  transition: all 0.3s ease;
}

.role-option.active {
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  font-weight: bold;
}

.confirm-btn {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin-top: 20rpx;
}

.confirm-btn:active {
  opacity: 0.8;
}

/* 角色选择器 */
.role-picker-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.picker-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.role-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.new-role-btn {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 32rpx;
  color: #667eea;
  border: none;
}

.divider {
  width: 100%;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 20rpx 0;
}

.loading-section {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 32rpx;
  color: #fff;
}

.back-btn {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  padding: 20rpx;
  color: #fff;
  font-size: 28rpx;
}
