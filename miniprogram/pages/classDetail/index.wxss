.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.class-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.class-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.class-meta {
  display: flex;
  gap: 30rpx;
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.copy-btn {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  line-height: 1.5;
}

.section-title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.assignment-list {
  padding: 0 30rpx 30rpx;
}

.assignment-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 16rpx;
}

.assignment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.question-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.status {
  font-size: 24rpx;
}

.assignment-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}
