.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

.assignment-info {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  color: #fff;
}

.class-tag {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-bottom: 16rpx;
}

.question {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.deadline {
  font-size: 24rpx;
  opacity: 0.9;
}

.reference-section {
  margin: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.reference-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

.record-section {
  margin: 0 30rpx;
}

.camera-preview {
  background: #000;
  border-radius: 16rpx;
  overflow: hidden;
}

.video-preview {
  width: 100%;
  height: 400rpx;
}

.record-placeholder {
  background: #333;
  border-radius: 16rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.placeholder-text {
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.placeholder-hint {
  color: #999;
  font-size: 24rpx;
}

.record-controls {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.record-btn {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}

.record-btn.recording {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 107, 0.4);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.record-icon {
  color: #fff;
  font-size: 48rpx;
}

.record-time {
  color: #fff;
  font-size: 24rpx;
  margin-top: 4rpx;
}

.re-record {
  margin-top: 30rpx;
  text-align: center;
}

.re-record-btn {
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
}

.submit-section {
  margin: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.video-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-text {
  font-size: 28rpx;
  color: #333;
}

.file-size {
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
}

.progress-section {
  margin-top: 24rpx;
}

.progress-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
}

.history-section {
  margin: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.history-list {
  margin-top: 16rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-time {
  flex: 1;
  font-size: 26rpx;
  color: #666;
}

.history-score {
  margin-right: 20rpx;
}

.history-score .score {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
}

.history-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.history-status.graded {
  background: #e6fffb;
  color: #13c2c2;
}

.history-status.pending {
  background: #fff7e6;
  color: #fa8c16;
}
